ant pack-webapp
TC=tomcat6
if [ -z $TC_HOME ]; then
   TC_HOME=/var/lib/$TC
fi

if [ -z $TC_CMD ]; then
   TC_CMD="sudo /sbin/service $TC"
fi

rpm -q $TC > /dev/null
if [ "$?" -ne 0 ]; then
    TC=tomcat5
    rpm -q $TC > /dev/null
    if [ "$?" -ne 0 ]; then
       echo "DEPLOYMENT FAILED: you don't have tomcat installed"
       exit 1
    fi
fi
sudo rm -rf $TC_HOME/webapps/candlepin/
sudo cp build/webapp/candlepin.war $TC_HOME/webapps/
$TC_CMD stop
$TC_CMD start
